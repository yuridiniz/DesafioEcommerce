<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Ecommerce</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/angular")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Desafio Mundipagg", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <p ng-repeat="item in currentMessage" class="alert {{item.success ? 'bg-success' : 'bg-danger'}}">{{item.text}}</p>
        <div class="animation-parent">
            <div ng-view class="toggle">

            </div>
        </div>
        <hr />
        <footer>
            <p>@*&copy; @DateTime.Now.Year - My ASP.NET Application*@</p>
        </footer>
    </div>
    <div ng-show="loading == true" class="loading-content">
        <img src="~/Content/Img/loading.gif" />
    </div>
    @Scripts.Render("~/bundles/app")
</body>
</html>

